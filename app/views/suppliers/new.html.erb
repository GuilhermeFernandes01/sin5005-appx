<h1>Cadastro de Fornecedores</h1>
<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% elsif flash.now[:alert] %>
  <div class="alert alert-danger"><%= flash.now[:alert] %></div>
<% end %>

<div class="formulario">
  <%= form_with model: @supplier, url: suppliers_path, local: true do |form| %>
    <div>
      <%= form.label :name, "Nome" %>
      <%= form.text_field :name %>
    </div>
    <div>
      <%= form.label :cnpj, "CNPJ" %>
      <%= form.text_field :cnpj %>
    </div>
    <div>
      <%= form.label :phone, "Telefone" %>
      <%= form.text_field :phone %>
    </div>
    <div>
      <%= form.label :email, "Email" %>
      <%= form.text_field :email %>
    </div>
    <div>
      <%= form.label :segment, "Segmento" %>
      <%= form.text_field :segment %>
    </div>
    <div>
      <%= form.label :products, "Produtos" %>
      <%= form.text_field :products %>
    </div>
    <div>
      <%= form.submit "Criar fornecedor" %>
    </div>
  <% end %>
</div>

<p class="text-center">
  <%= link_to 'Retornar para a lista de fornecedores', suppliers_path %>
</p>

