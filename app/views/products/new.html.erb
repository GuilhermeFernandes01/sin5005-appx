<h1 id="page-heading">Novo Produto</h1>

<div class="formulario">
  <%= form_with model: @product, id: "product-form" do |form| %>
    <% if @product.errors.any? %>
      <div>
        <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, "Nome do produto" %><br />
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :price, "PreÃ§o" %><br />
      <%= form.text_field :price %>
    </div>

    <div>
      <%= form.label :category, "Categoria" %><br />
      <%= form.text_field :category %>
    </div>

    <div class="label-checkbox-group">
      <%= form.label :require_ingredients, "Requer ingredientes" %>
      <div>
        <%= form.check_box :require_ingredients %>
      </div>
    </div>

    <div>
      <%= form.submit "Criar" %>
    </div>
  <% end %>
</div>
