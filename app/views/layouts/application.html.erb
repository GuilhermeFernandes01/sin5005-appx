<!DOCTYPE html>
<html>
  <head>
    <title>Each Pizzas</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbo-track': 'reload', defer: true %>
  </head>

  <body>
    <nav id="menu-home" class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <!-- Logo com imagem favicon.png -->
        <a class="navbar-brand" href="/">
          <%= image_tag 'favicon.png', alt: 'Logo', size: '30x30' %> Each Pizzas
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <!-- Opções do Menu -->
            <li class="nav-item">
              <%= link_to 'Clientes', clientes_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Empregados', employees_path , class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Fornecedores', suppliers_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Ingredientes', ingredients_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Produtos', products_path, class: 'nav-link' %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>